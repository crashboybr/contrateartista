{% extends "FOSUserBundle::layout.html.twig" %}

{% trans_default_domain 'FOSUserBundle' %}

{% block fos_user_content %}
	<div class="content-ad" style="height: 160px;">
	<div class="titleMenu">
        {% for flashMessage in app.session.flashbag.get('success') %}
        <div class="custom">
			<p class="alerta-sucess" style="text-align: center;">
			<img src="/assets/check-sucesso.png" width="28" height="25">{{ flashMessage }}
			</p>
		</div>
		{% endfor %}
        <p style="color: black;">
			{{ 'registration.confirmed'|trans({'%username%': user.username}) }}

		</p>
		{% if app.session is not empty %}
	        {% set targetUrl = app.session.get('_security.' ~ app.security.token.providerKey ~ '.target_path') %}
	        {% if targetUrl is not empty %}<p><a href="{{ targetUrl }}">{{ 'registration.back'|trans }}</a></p>{% endif %}
	    {% endif %}
	</div>
</div>
    
{% endblock fos_user_content %}
